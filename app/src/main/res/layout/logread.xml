<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" android:background="@android:color/holo_orange_dark" android:id="@+id/rela">

        <TextView
                android:text="燒錄資訊"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_centerInParent="true"
                android:textColor="@android:color/white" android:textSize="18sp" android:textStyle="bold"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@id/rela">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/log" android:lineSpacingMultiplier="1.5"
                    android:padding="10dp" android:textColor="@color/colorAccent" android:textSize="18sp"
                    android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>